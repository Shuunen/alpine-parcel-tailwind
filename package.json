{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/alpine-parcel-tailwind/issues",
  "config": {
    "port": 8000
  },
  "description": "Web stack featuring Alpine.js, Parcel and Tailwind.css",
  "devDependencies": {
    "alpinejs": "2.0.1",
    "cross-var": "1.1.0",
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-html": "6.0.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "npm-run-all": "4.1.5",
    "parcel-bundler": "1.12.4",
    "posthtml-include": "1.3.3",
    "rimraf": "3.0.2",
    "serve": "11.3.0",
    "tailwindcss": "1.2.0"
  },
  "files": [
    "src"
  ],
  "homepage": "https://github.com/Shuunen/alpine-parcel-tailwind",
  "keywords": [],
  "license": "GPL-3.0",
  "name": "@shuunen/alpine-parcel-tailwind",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/alpine-parcel-tailwind.git"
  },
  "scripts": {
    "build": "parcel build src/index.html --public-url . --no-source-maps",
    "check": "npx repo-check",
    "ci": "npm run test",
    "dev": "run-p watch ",
    "lint": "eslint --fix --ignore-path .gitignore --ext .js,.html .",
    "prebuild": "rimraf dist/*",
    "prestart": "npm run build",
    "serve": "cross-var serve dist --listen $npm_package_config_port --single",
    "start": "npm run serve",
    "test": "run-s check lint build",
    "update": "npx npm-check-updates -u",
    "watch": "cross-var parcel src/index.html --port $npm_package_config_port"
  },
  "version": "0.0.1"
}
